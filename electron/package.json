{
  "name": "Iron",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "electron-is-dev": "^1.0.1",
    "emoji-mart": "^2.11.0",
    "jquery": "^3.4.1",
    "phoenix-channels": "^1.0.0",
    "popper.js": "^1.15.0",
    "qs": "~6.5.2",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-dom": "^16.8.6",
    "react-router-dom": "4.3.1",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "yarn build --em.main=build/electron.js",
    "preelectron-pack": "yarn build",
    "dist": "electron-builder -mw",
    "lint": "eslint ./src"
  },
  "main": "public/electron.js",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.0.1",
    "electron": "^5.0.2",
    "electron-builder": "^21.2.0",
    "electron-notarize": "^0.1.1",
    "eslint-config-google": "^0.12.0",
    "eslint-plugin-react": "^7.12.4",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "com.ironnotice.messenger",
    "afterSign": "./build-inputs/afterSignHook.js",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "NSIS"
    },
    "mac": {
      "hardenedRuntime": true,
      "target": [
        "dmg"
      ],
      "entitlements": "./build-inputs/entitlements.mac.inherit.plist"
    }
  },
  "author": "Gary Button",
  "description": "End to end encrypted messaging app",
  "homepage": "./"
}
